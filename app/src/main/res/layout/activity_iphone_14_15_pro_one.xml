<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="iphone1415ProOneVM" type="com.joelysousasilvasapplication.app.modules.iphone1415proone.data.viewmodel.Iphone1415ProOneVM"/>
    </data>
    <LinearLayout android:id="@+id/linearIPhone1415Pro"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_83pxv"
        android:paddingEnd="@dimen/_43pxh"
        android:paddingStart="@dimen/_43pxh"
        android:paddingTop="@dimen/_83pxv" style="@style/groupStylewhite_A700">
        <EditText android:background="@android:color/transparent"
            android:ellipsize="end"
            android:hint="@string/msg_digite_o_valor_em"
            android:id="@+id/etDigiteOValor" android:inputType="text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/_8pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_8pxv" android:singleLine="true"
            android:text="@={iphone1415ProOneVM.iphone1415ProOneModel.etDigiteOValorValue}"
            android:textColorHint="@color/black_900_01"
            style="@style/etSolidRoundedOutline" tools:ignore="Autofill"/>

        <TextView
            android:id="@+id/btnDigiteOValor"
            android:layout_width="@dimen/_306pxh"
            android:layout_height="@dimen/_32pxv"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_13pxv"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_8pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_8pxv"
            android:singleLine="true"
            android:text="@string/msg_digite_o_valor_em2"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnConverter"
            android:layout_width="@dimen/_306pxh"
            android:layout_height="@dimen/_32pxv"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_8pxv"
            android:paddingEnd="@dimen/_30pxh"
            android:paddingBottom="@dimen/_8pxv"
            android:singleLine="true"
            android:text="@string/lbl_converter"
            android:textAllCaps="false" />

        <EditText
            android:id="@+id/etResultOne"
            style="@style/etSolidRoundedOutline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_43pxv"
            android:background="@drawable/rectangle_bg_blue_gray_100_border_red_200_radius_10"
            android:ellipsize="end"
            android:hint="@string/lbl_resultado"
            android:inputType="text"
            android:paddingStart="@dimen/_10pxh"
            android:paddingTop="@dimen/_8pxv"
            android:paddingEnd="@dimen/_10pxh"
            android:paddingBottom="@dimen/_8pxv"
            android:singleLine="true"
            android:text="@={iphone1415ProOneVM.iphone1415ProOneModel.etResultOneValue}"
            android:textColorHint="@color/black_900"
            tools:ignore="Autofill" />
    </LinearLayout>
</layout>
